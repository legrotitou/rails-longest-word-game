<h1>New game</h1>
  <div class="letters mb-3">
    <% @letters.each do |letter| %>
        <%= letter %>
    <% end %>
</div>

<div class = "form">
    <p><b>What is the longest word you can find?</b></p>
    <form action="/score" method=post data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input name ="answer" type="text" class="form-control" placeholder="What's your word">
      <button type="submit" class="btn btn-primary mb-2">Play</button>
  </form>
  </div>
